                <ContentControl VerticalAlignment="Stretch" 
                                HorizontalAlignment="Stretch"
                                Content="{Binding CurrentScreen}"/>
            </Grid>
        </DockPanel>-->
    </Grid>
</Controls:MetroWindow>
