<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RescueApp.Views"
             xmlns:WPF="clr-namespace:RescueApp.WPF" x:Class="RescueApp.Views.Monitoring"
             DataContext="{Binding MonitoringVM, Source={StaticResource Locator}}"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="497.426">
    <UserControl.Resources>
        <WPF:NullBooleanConverter x:Key="NullBooleanConverter"/>
    </UserControl.Resources>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <ListBox ItemsSource="{Binding SummariesCollectionView}" 
                 SelectedItem="{Binding CurrentMonitoringSummary, Mode=OneWayToSource}"
                 IsSynchronizedWithCurrentItem="True"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <ListBox.ItemTemplate>
                <DataTemplate >
                    <Grid Margin="4">
                        <StackPanel Margin="2" Orientation="Vertical">
                            <TextBlock TextWrapping="Wrap" Text="{Binding center.CenterName}" Margin="0,0,4,0" Height="16" FontWeight="Bold" FontFamily="Source Sans Pro Black"/>
                            <TextBlock TextWrapping="Wrap"><Run Text="{Binding num_evacuated, Mode=OneWay}" /><Run Text=" "/><Run Text="/"/><Run Text=" "/><Run Text="{Binding center.Limit}" /></TextBlock>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <ListBox x:Name="listBox" 
                     ItemsSource="{Binding NotCheckedIn}"/>

            <Button Grid.Column="1" VerticalAlignment="Center" IsEnabled="{Binding SelectedItem, Converter={StaticResource NullBooleanConverter}, ElementName=listBox}">
                <TextBlock TextWrapping="Wrap"><Run Text="Manual Check-in"/></TextBlock>
            </Button>

            <ListBox Grid.Column="2" ItemsSource="{Binding CheckedIn}" />



        </Grid>
    </Grid>
</UserControl>
