<UserControl x:Class="RescueApp.Views.People"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RescueApp.Views"
             mc:Ignorable="d" DataContext="{Binding PeopleVM, Source={StaticResource Locator}}"
             d:DesignHeight="335.666" d:DesignWidth="341.029">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button Command="{Binding RegisterCommand}">Register Person</Button>
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <ItemsControl x:Name="peopleList" ItemsSource="{Binding People}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Vertical" Margin="5">
                                <TextBlock FontWeight="Bold" 
                                Text="{Binding FullName}" />
                                <TextBlock FontStyle="Italic" 
                                Text="{Binding Address}" />
                            </StackPanel>

                            <Button VerticalAlignment="Center" Margin="5"
                                    Grid.Column="1" 
                                    Command="{Binding DataContext.DeleteCommand, ElementName=peopleList, Mode=OneWay}" 
                                    CommandParameter="{Binding Mode=OneWay}">Delete
                            </Button>
                        </Grid>

                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
