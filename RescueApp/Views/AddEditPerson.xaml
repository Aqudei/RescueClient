<UserControl x:Class="RescueApp.Views.AddEditPerson"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RescueApp.Views" 
             xmlns:iconPacks ="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" DataContext="{Binding AddEditPersonVM, Source={StaticResource Locator}}"
             d:DesignHeight="524.405" Width="646.513">
    <UserControl.Resources>
        <BitmapImage x:Key="defaultImage" UriSource="/RescueApp;component/Resources/question_sign_on_person_head.png" />
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="1" Margin="8"
               Source="{Binding ChoosenPhoto, TargetNullValue={StaticResource defaultImage}}"/>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Width="{Binding ActualWidth, ElementName=midNamelabel}">First Name:</Label>
                <TextBox CharacterCasing="Upper" Width="200" Text="{Binding FirstName, Mode=TwoWay}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label x:Name="midNamelabel">Middle Name:</Label>
                <TextBox CharacterCasing="Upper" Width="200" Text="{Binding MiddleName, Mode=TwoWay}" />


            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Width="{Binding ActualWidth, ElementName=midNamelabel}">Last Name:</Label>
                <TextBox CharacterCasing="Upper" Width="200" Text="{Binding LastName, Mode=TwoWay}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Width="{Binding ActualWidth, ElementName=midNamelabel}">Photo:</Label>
                <TextBox x:Name="txtPhoto" Width="200" IsReadOnly="True"
                         Text="{Binding ChoosenPhoto, Mode=TwoWay}"/>
                <Button Command="{Binding BrowsePhotoCommand}" Margin="5,0,0,0" >Browse</Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Width="{Binding ActualWidth, ElementName=midNamelabel}">Birthday:</Label>
                <DatePicker Width="200" SelectedDate="{Binding Birthday, Mode=TwoWay}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Width="{Binding ActualWidth, ElementName=midNamelabel}">Blood Type:</Label>
                <ComboBox Width="200" Text="{Binding BloodType, Mode=TwoWay}" SelectedIndex="0">
                    <ComboBoxItem>A-</ComboBoxItem>
                    <ComboBoxItem>A+</ComboBoxItem>
                    <ComboBoxItem>B-</ComboBoxItem>
                    <ComboBoxItem>B+</ComboBoxItem>
                    <ComboBoxItem>O-</ComboBoxItem>
                    <ComboBoxItem>O+</ComboBoxItem>
                    <ComboBoxItem>AB-</ComboBoxItem>
                    <ComboBoxItem>AB+</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Width="{Binding ActualWidth, ElementName=midNamelabel}">Address:</Label>
                <TextBox MinLines="3" 
                         Width="200" 
                         CharacterCasing="Upper"
                         Text="{Binding Address, Mode=TwoWay}" 
                         Height="80" TextWrapping="WrapWithOverflow"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Width="{Binding ActualWidth, ElementName=midNamelabel}">Contact:</Label>
                <TextBox Width="200" 
                         Text="{Binding Contact}" CharacterCasing="Upper"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Width="{Binding ActualWidth, ElementName=midNamelabel}">Sickness:</Label>
                <TextBox Width="200" 
                         Text="{Binding Sickness}" CharacterCasing="Upper"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Width="{Binding ActualWidth, ElementName=midNamelabel}">Family:</Label>
                <TextBox MinLines="3" 
                         Width="200" 
                         CharacterCasing="Upper"
                         Text="{Binding Members}" 
                         Height="80" TextWrapping="WrapWithOverflow"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Button Margin="3" 
                        Command="{Binding SaveCommand, Mode=OneWay}">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconModern Kind="Save"/>
                        <TextBlock Padding="0" Margin="4,0,0,0">SAVE</TextBlock>
                    </StackPanel>
                </Button>
                <Button Click="CloseButtonClicked" Margin="3">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconModern Kind="Close"/>
                        <TextBlock Padding="0" Margin="4,0,0,0">CLOSE</TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>

    