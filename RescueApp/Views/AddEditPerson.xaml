<UserControl x:Class="RescueApp.Views.AddEditPerson"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RescueApp.Views" 
             mc:Ignorable="d" DataContext="{Binding AddEditPersonVM, Source={StaticResource Locator}}"
             d:DesignHeight="364.405" Width="646.513">
    <UserControl.Resources>

    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="1" Source="{Binding ChoosenPhoto}"/>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Width="{Binding ActualWidth, ElementName=midNamelabel}">First Name:</Label>
                <TextBox CharacterCasing="Upper" Width="200" Text="{Binding FirstName}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label x:Name="midNamelabel">Middle Name:</Label>
                <TextBox CharacterCasing="Upper" Width="200" Text="{Binding MiddleName}" />


            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Width="{Binding ActualWidth, ElementName=midNamelabel}">Last Name:</Label>
                <TextBox CharacterCasing="Upper" Width="200" Text="{Binding LastName}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Width="{Binding ActualWidth, ElementName=midNamelabel}">Photo:</Label>
                <TextBox x:Name="txtPhoto" Width="200" IsReadOnly="True"
                         Text="{Binding ChoosenPhoto}"/>
                <Button Command="{Binding BrowsePhotoCommand}" Margin="5,0,0,0" >Browse</Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Width="{Binding ActualWidth, ElementName=midNamelabel}">Birthday:</Label>
                <DatePicker Width="200" SelectedDate="{Binding Birthday}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Width="{Binding ActualWidth, ElementName=midNamelabel}">Blood Type:</Label>
                <ComboBox Width="200" Text="{Binding BloodType}" SelectedIndex="0">
                    <ComboBoxItem>A-</ComboBoxItem>
                    <ComboBoxItem>A+</ComboBoxItem>
                    <ComboBoxItem>B-</ComboBoxItem>
                    <ComboBoxItem>B+</ComboBoxItem>
                    <ComboBoxItem>O-</ComboBoxItem>
                    <ComboBoxItem>O+</ComboBoxItem>
                    <ComboBoxItem>AB-</ComboBoxItem>
                    <ComboBoxItem>AB+</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Width="{Binding ActualWidth, ElementName=midNamelabel}">Address:</Label>
                <TextBox MinLines="3" 
                         Width="200" 
                         CharacterCasing="Upper"
                         Text="{Binding Address}" 
                         Height="80"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Button Margin="3" Command="{Binding SaveCommand, Mode=OneWay}">Save</Button>
                <Button Click="CloseButtonClicked" Margin="3">Close</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>

    