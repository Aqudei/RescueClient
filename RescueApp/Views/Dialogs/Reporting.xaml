<maha:MetroWindow x:Class="RescueApp.Views.Dialogs.Reporting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:maha="http://metro.mahapps.com/winfx/xaml/controls"
        
        xmlns:local="clr-namespace:RescueApp.Views.Dialogs"
        DataContext="{Binding ReportingVM, Source={StaticResource Locator}}"
        mc:Ignorable="d"
        Title="Reporting" Height="338.603" Width="497.426" BorderBrush="Black" BorderThickness="1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Margin="8">
            <TextBlock>PLEASE SELECT SPECIFIC CALAMITY/DISASTER</TextBlock>
            <ComboBox ItemsSource="{Binding Incidents}"/>
        </StackPanel>
    </Grid>
</maha:MetroWindow>
