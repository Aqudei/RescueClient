<UserControl x:Class="RescueApp.Views.CenterSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             DataContext="{Binding CenterSelectorVM, Source={StaticResource Locator}}"
             xmlns:local="clr-namespace:RescueApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1445.091" d:DesignWidth="2050.606">
    <Grid Width="600" Height="400">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ListBox ItemsSource="{Binding AllPeopleView}"/>
        <ListBox Grid.Column="2" ItemsPanel="{Binding CurrentCenter.members}"/>
    </Grid>
</UserControl>
